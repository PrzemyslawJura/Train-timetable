@model ASP_DOT_NET_APP.Pages.Timetable.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Rozklad_Jazdy.Id" />
            <div class="form-group">
                <label asp-for="Rozklad_Jazdy.Name_From" class="control-label"></label>
                <input asp-for="Rozklad_Jazdy.Name_From" class="form-control" />
                <span asp-validation-for="Rozklad_Jazdy.Name_From" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rozklad_Jazdy.Name_To" class="control-label"></label>
                <input asp-for="Rozklad_Jazdy.Name_To" class="form-control" />
                <span asp-validation-for="Rozklad_Jazdy.Name_To" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rozklad_Jazdy.Hours" class="control-label"></label>
                <input asp-for="Rozklad_Jazdy.Hours" class="form-control" />
                <span asp-validation-for="Rozklad_Jazdy.Hours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" style="margin-right: 20px;" />
                <a asp-page="./Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
